% the name (longname) for our node
% read http://erlang.org/doc/reference_manual/distributed.html#id88377
% for more information
{node, "cadena@127.0.0.1"}.

%% HTTP Config

{http_port, 8080}.
{http_acceptors, 100}.

%% Paths

% where we are going to store the data generated by the application
{platform_data_dir, "./data"}.

% where we are going to store the logs generated by the application
{log_path, "./log"}.

% where the crash dumps will be stored, if we don't set this var we get
% a weird error when trying to start the node
{crash_dump, "{{platform_log_dir}}/erl_crash.dump"}.
